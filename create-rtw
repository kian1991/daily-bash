#!/bin/bash
echo "âœ¨ Creating a new React project with TypeScript using Vite"

if [ -z "$1" ]
then
    read -p "ðŸ‘‰ Enter the name of the project: " project_name
else
    project_name=$1
fi

npm create vite@latest $project_name -- --template react-swc-ts
cd $project_name
clear
echo "ðŸ“¦ Installing Tailwind CSS..."
npm install tailwindcss @tailwindcss/vite

# replace the vite config
cat <<-END > vite.config.ts
import { defineConfig } from 'vite';
import react from '@vitejs/plugin-react-swc';
import tailwindcss from '@tailwindcss/vite';

// https://vite.dev/config/
export default defineConfig({
  plugins: [react(), tailwindcss()],
});
END
# create a new index.css file with the tailwind directives
echo '@import "tailwindcss";' > src/index.css

# clean up project
echo "ðŸ§¹ Yes I do the cleaning."
rm -rf src/assets/* src/App.tsx src/App.css
rm public/vite.svg

touch src/app.tsx

echo "export function App() {
  return (
    <div className=\"flex min-h-screen items-center justify-center bg-teal-950\">
      <span className=\"animate-spin text-[14em]\">ðŸ¦­</span>
    </div>
  );
}
" > src/app.tsx
sed -i '' 's|import App from '\''./App.tsx'\''|import { App } from "./app";|' src/main.tsx
# install auto-sort
echo "ðŸ“¦ Installing tailwind auto-sort..."
npm install -D prettier prettier-plugin-tailwindcss

# add the tailwindcss plugin to the prettier config
echo "{
  \"plugins\": [\"prettier-plugin-tailwindcss\"]
}" > .prettierrc

# start the project
echo "ðŸ’¾ Opening the project..."
code .


